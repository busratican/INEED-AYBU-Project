<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ineed.ybu.ineed_app_lastest.ProfileActivity"
    android:background="@android:color/darker_gray">

    <TextView
        android:text="Surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:id="@+id/tvSurname"
        android:textSize="25sp"
        android:layout_alignBaseline="@+id/tvName"
        android:layout_alignBottom="@+id/tvName"
        android:layout_toRightOf="@+id/tvName"
        android:layout_toEndOf="@+id/tvName" />

    <TextView
        android:text="Pleasure Rate:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/tvPlrate"
        android:textSize="25sp"
        android:layout_below="@+id/tvClass"
        android:layout_alignLeft="@+id/tvClass"
        android:layout_alignStart="@+id/tvClass" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/need_logo"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tvDepartment"
        android:layout_toStartOf="@+id/tvDepartment"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="28dp"
        android:id="@+id/imageView4" />

    <TextView
        android:text="PROFILE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvProfile"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignRight="@+id/tvDepartment"
        android:layout_alignEnd="@+id/tvDepartment"
        android:layout_marginTop="28dp" />

    <TextView
        android:text="Class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/tvClass"
        android:textSize="25sp"
        android:layout_below="@+id/tvDepartment"
        android:layout_alignLeft="@+id/tvDepartment"
        android:layout_alignStart="@+id/tvDepartment" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="101dp"
        android:layout_marginStart="101dp"
        android:id="@+id/tvName"
        android:textSize="25sp"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <TextView
        android:text="Department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDepartment"
        android:textSize="25sp"
        android:layout_below="@+id/imageView4"
        android:layout_alignLeft="@+id/tvName"
        android:layout_alignStart="@+id/tvName" />

    <Button
        android:id="@+id/btn_ok"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:text="OK"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="75dp"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:background="@color/colorPrimaryDark" />



</RelativeLayout>
