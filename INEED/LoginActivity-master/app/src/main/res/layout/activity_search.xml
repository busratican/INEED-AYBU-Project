<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ineed.ybu.ineed_app_lastest.SearchActivity"
    android:orientation="horizontal"
    android:background="@android:color/darker_gray">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_Profile"
            android:layout_width="122dp"
            android:layout_height="164dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView11"
            android:background="@drawable/profile"
            android:layout_weight="0.32"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btn_messages"
            android:layout_width="90dp"
            android:layout_height="136dp"
            android:layout_toRightOf="@+id/btn_mainPage_notifications"
            android:layout_alignParentBottom="true"
            android:background="@drawable/message"
            android:layout_weight="0.48" />

        <Button
            android:id="@+id/btn_mainPage_notifications"
            android:layout_width="111dp"
            android:layout_height="127dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/notification"
            android:layout_weight="0.32" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_mainPage_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Location"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_mainPage_searchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLines="1"
        android:hint="Search here."
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/tv_mainPage_location"
        android:layout_marginBottom="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:layout_toLeftOf="@+id/searchButton"
        android:layout_toStartOf="@+id/searchButton" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Welcome"
        android:textSize="24dp"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/imageView12"
        android:layout_toRightOf="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/tv_mainPage_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Name"
        android:textSize="24dp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView11"
        android:layout_toRightOf="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/need_logo"
        android:id="@+id/imageView12"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tv_mainPage_location"
        android:layout_alignStart="@+id/tv_mainPage_location" />

    <TextView
        android:id="@+id/tv_mainPage_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Surname"
        android:textSize="24dp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView11"
        android:layout_toLeftOf="@+id/buttonLogout"
        android:layout_toStartOf="@+id/buttonLogout" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"
        style="@android:style/Widget.Button.Inset"
        android:background="@android:drawable/ic_notification_overlay"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:textColor="@android:color/background_light"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Button.Inset"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignTop="@+id/et_mainPage_searchText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/ic_menu_search" />

</RelativeLayout>
